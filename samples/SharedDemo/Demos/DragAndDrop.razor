@page "/"
@layout DemoLayout
@inject LayoutData LayoutData

<div class="row h-100 m-0 p-0">
    <div class="col-auto m-0 p-0">
        <div class="row vh-100 p-4 no-gutters d-flex flex-col justify-content-between align-content-between align-items-center "
            style="background: #f5f5f5; flex-direction: column !important;">

            <div class="sidebar-logo text-white fw-bold text-center mb-4">
                MW
            </div>

            <div>
                <div class="mb-4 w-100 hover-box" style="cursor: pointer; padding: .6rem;">
                    <div class="text-center" draggable="true" @ondragstart="() => OnDragStart(0)">
                        <div style="pointer-events:none;">
                            <i class="fa-solid fa-bolt" style="color: #62636c;"></i>
                        </div>
                    </div>
                </div>
                <div class="mb-4 w-100 hover-box" style="cursor: pointer; padding: .6rem;">
                    <div class="text-center" draggable="true" @ondragstart="() => OnDragStart(2)">
                        <div style="pointer-events:none;">
                            <i class="fa-regular fa-circle" style="color: #62636c;"></i>
                        </div>
                    </div>
                </div>
                <div class="mb-4 w-100 hover-box" style="cursor: pointer; padding: .6rem;">
                    <div class="text-center" draggable="true" @ondragstart="() => OnDragStart(1)">
                        <div style="pointer-events:none;" class="d-flex flex-column align-items-center">
                            <i class="fa-solid fa-code-branch" style="color: #62636c;"></i>
                        </div>
                    </div>
                </div>
                <div class="mb-4 w-100 hover-box" style="cursor: pointer; padding: .6rem;">
                    <div class="text-center" draggable="true" @ondragstart="() => OnDragStart(3)">
                        <div style="pointer-events:none;" class="d-flex flex-column align-items-center">
                            <i class="fa-solid fa-rotate" style="color: #62636c;"></i>
                        </div>
                    </div>
                </div>
                <div class="mb-4 w-100 hover-box" style="cursor: pointer; padding: .6rem;">
                    <div class="text-center" draggable="true" @ondragstart="() => OnDragStart(5)">
                        <div style="pointer-events:none;" class="d-flex flex-column align-items-center">
                            <i class="fa-solid fa-repeat" style="color: #62636c;"></i>
                        </div>
                    </div>
                </div>
                <div class="mb-4 w-100 hover-box" style="cursor: pointer; padding: .6rem;">
                    <div class="text-center" draggable="true" @ondragstart="() => OnDragStart(4)">
                        <div style="pointer-events:none;" class="d-flex flex-column align-items-center">
                            <i class="fa-solid fa-flag-checkered" style="color: #62636c;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column align-items-center gap-3">
                <div class="mb-3" style="cursor: pointer;">
                    <i class="fas fa-cog fa-lg"></i>
                </div>
                <div style="cursor: pointer;">
                    <i class="fas fa-question-circle fa-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col m-0 p-0 overflow-hidden" ondragover="event.preventDefault();" @ondragover:preventDefault
        @ondrop="OnDrop">
        <nav class="navbar p-4 navbar-expand-lg navbar-light bg-light border-bottom">
            <span>My New Workflow</span>
        </nav>
        <CascadingValue Value="_blazorDiagram">
            <DiagramCanvas></DiagramCanvas>
        </CascadingValue>
    </div>

</div>
